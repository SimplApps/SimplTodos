<%= form_for @user do |form| %>
  <%= render "error_messages", target: @user %>
  
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  
  <div>
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>
  
  <div>
    <%= form.label :password %>
    <%= form.text_field :password %>
  </div>
  
  <div>
    <%= form.label :password_confirmation %>
    <%= form.text_field :password_confirmation %>
  </div>
  
  <%= form.submit "Sign Up" %>
<% end %>